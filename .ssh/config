# SSH Configuration for Oral App Remote Development
# Replace placeholders with your actual server information

Host oral-app-remote
    HostName ser74785.ddns.net  # Replace with actual server IP
    User kennys              # Replace with your remote username
    Port 3222

    ServerAliveInterval 30
    ServerAliveCountMax 5
    TCPKeepAlive yes
    Compression yes
    
    # For better performance
    ControlMaster auto
    ControlPath ~/.ssh/control-%r@%h:%p
    ControlPersist 600

